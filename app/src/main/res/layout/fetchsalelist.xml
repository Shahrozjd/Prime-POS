<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/circlelayout"

        >


        <EditText
            android:id="@+id/txtlistsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Search sale by Client name"
            android:textColor="#050505"
            android:drawableStart="@drawable/ic_search_black_24dp"
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            >
            <Button
                android:id="@+id/btnlistsearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="#FFFF"
                android:background="@drawable/btncircullayout"
                />



        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnlistrevert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revert Search"
            android:padding="5dp"
            android:textColor="#FFFF"
            android:background="@drawable/btncircullayout"
            />
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ListView
            android:id="@+id/salelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

    </LinearLayout>





</LinearLayout>

