<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/linearLayout17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <EditText
                android:id="@+id/txtclient"
                android:textColor="#050505"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/idlogo"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/circlelayout"
                android:gravity="center"

                android:hint="Enter client name" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <EditText
                android:id="@+id/txtclientphn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:background="@drawable/circlelayout"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableStart="@drawable/ic_contact_phone_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Client Phone No."
                android:gravity="center"
                android:textColor="#050505"
                android:textStyle="bold"

                />




        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout17">



            <EditText

                android:id="@+id/txtcity"
                android:textColor="#050505"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_location_city_black_24dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/circlelayout"
                android:gravity="center"
                android:hint="Enter City" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout18">


            <EditText
                android:id="@+id/txtaddress"
                android:textColor="#050505"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_add_location_black_24dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/circlelayout"
                android:gravity="center"
                android:hint="Enter Address" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/circlelayout"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout19">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#CF302D"
                android:text="Item:"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinneritem"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout20">


            <EditText
                android:id="@+id/txtunitprice"
                android:textColor="#050505"
                android:textStyle="bold"
                android:inputType="number"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_attach_money_black_24dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/circlelayout"
                android:gravity="center"
                android:hint="Enter unit price"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout21"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@drawable/circlelayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout25"
            android:orientation="horizontal"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Quantity:"
                android:textColor="#CF302D"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                >
                <Button

                    android:id="@+id/decrease"
                    android:layout_width="57dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/btncircullayout"
                    android:textColor="#FFFF"

                    android:textSize="20sp"
                    android:text="-" />


                <TextView

                    android:id="@+id/integer_number"

                    android:layout_width="57dp"

                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="0"

                    android:textColor="#CF302D"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <Button

                    android:id="@+id/increase"

                    android:layout_width="57dp"

                    android:layout_height="36dp"
                    android:background="@drawable/btncircullayout"
                    android:textColor="#FFFF"
                    android:textSize="20sp"
                    android:text="+" />



            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout21">



            <EditText
                android:id="@+id/txtdiscount"
                android:textColor="#050505"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_payment_black_24dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="number"
                android:background="@drawable/circlelayout"
                android:gravity="center"
                android:hint="Enter discount (If any)">


            </EditText>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:background="@drawable/circlelayout"
android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout23">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#CF302D"
                android:text="Total Amount:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTotalamnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="9"
                android:editable="false"
                android:enabled="false"
                android:textStyle="bold"
                android:textColor="#000000"

                android:hint="Total amount" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout24">

            <Button
                android:id="@+id/btnsave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btncircullayout"
                android:text="Save"
                android:textColor="#ffff" />



        </LinearLayout>


    </LinearLayout>



</ScrollView>