<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >




        <LinearLayout

            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_marginTop="-5dp"
            android:layout_height="90dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/primelogo"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:src="@drawable/primelogo"

                />
        </LinearLayout>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >


            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/saleimg"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:background="@drawable/imgcircullayout"
                    android:src="@drawable/updatedsale3"
                    />

                <ImageView
                    android:id="@+id/histimg"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/histcirculayout"
                    android:src="@drawable/histlogo"
                    android:padding="10dp"
                    />
                <ImageView
                    android:id="@+id/targetimg"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/targetcircullayout"
                    android:src="@drawable/targetlogo"
                    />

            </LinearLayout>


        </LinearLayout>










</LinearLayout>